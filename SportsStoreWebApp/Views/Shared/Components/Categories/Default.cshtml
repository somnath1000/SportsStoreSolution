@model IEnumerable<string>
@if (Model.Count() == 0)
{
  <h4>No Categories available</h4>
}
else
{
  <div class="d-grid">
  @foreach (var item in Model)
  {
    <a class="btn btn-outline-primary mb-1" asp-controller="Product" asp-action="GetByCategory" asp-route-category="@item">@item</a>
  }
  </div>
}